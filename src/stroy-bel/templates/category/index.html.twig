{% extends 'admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Категории</h1>

    <a class="btn btn-lg btn-primary mx-auto my-5 d-block w-25" href="{{ path('category_new') }}">Создать новую</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
