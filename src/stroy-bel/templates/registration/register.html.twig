{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container mt-5">
        <h1  class="h3 mb-3 font-weight-normal text-center">Register</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'mt-2 form-control mb-2'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                'attr': {'class': 'mt-2 form-control mb-2'}
            }) }}
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input mx-2 d-inline-block'}}) }}

            <button type="submit" class="btn btn-lg btn-primary mx-auto mt-5 d-block">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
